<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pic"/>
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="11dp"
        android:text="shopping"
        android:gravity="center"
        android:textColor="#328ac9"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_user"
        android:layout_toEndOf="@+id/iv_user"
        android:layout_marginStart="11dp"/>

    <TextView
        android:id="@+id/iv_school"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:text="中南民族大学"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_bookItem"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_below="@id/iv_user"
        android:layout_marginTop="10dp"
        android:background="#5cd4dfea"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignTop="@id/iv_bookItem"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_bookItem"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bookName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="高等数学"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="同济大学数学系"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="高等教育出版社"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:text="￥10.00"
            android:textColor="#ff0000"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_bookItem"
        android:layout_alignParentRight="true"
        android:text="2016-05-24 16:25:40"/>



</RelativeLayout>